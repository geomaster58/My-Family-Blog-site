<p id="notice"><%= notice %></p>

<h1>Shorties</h1>

<table>
  <thead>
    <tr>
      <th>Header</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shorties.each do |shorty| %>
      <tr>
        <td><%= shorty.header %></td>
        <td><%= shorty.body %></td>
        <td><%= link_to 'Show', shorty %></td>
        <td><%= link_to 'Edit', edit_shorty_path(shorty) %></td>
        <td><%= link_to 'Destroy', shorty, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shorty', new_shorty_path %>
